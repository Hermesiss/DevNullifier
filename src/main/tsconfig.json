{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist-main",
    "rootDir": "../",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["./**/*.ts", "./**/*.js", "../types/**/*.ts"],
  "exclude": ["**/__tests__/**"]
}
